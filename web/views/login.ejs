<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <title>IOT</title>

    <link rel="stylesheet" href="stylesheets/material.indigo-pink.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="scripts/jquery-3.2.1.min.js"integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script defer src="scripts/material.min.js"></script>

    <script type="text/javascript">
            var erro = JSON.parse('<%- erro%>');

            function r(f){ /in/.test(document.readyState)?setTimeout('r('+f+')',9):f()}

            if(erro){
                r(function(){
                    var snackbarContainer = document.querySelector('#toast-error');
                    var data = { message: 'Usuario e/ou Senha Invalidos'};
                    snackbarContainer.MaterialSnackbar.showSnackbar(data);
                });
            }
    </script>
</head>
<body>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">

            <div class="mdl-layout__header-row">
                <a href="index.html" class="mdl-layout__title">IOT</a>
                <div class="mdl-layout-spacer"></div>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">IOT</span>
        </div>
        <main class="mdl-layout__content login-main">
            <form class="" action="/" method="post">
                <div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="usuario" name="usuario">
                        <label class="mdl-textfield__label" for="usuario">Usuario</label>
                    </div>
                    <br>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="password" id="senha" name="senha">
                        <label class="mdl-textfield__label" for="senha">Senha</label>
                    </div>
                    <br><br>
                    <button id="login-button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored button-login">
                        Entrar
                    </button>

                </div>

                <div id="toast-error" class="mdl-js-snackbar mdl-snackbar">
                    <div class="mdl-snackbar__text"></div>
                    <button class="mdl-snackbar__action" type="button"></button>
                </div>
            </form>
        </main>
    </div>
</body>
</html>
